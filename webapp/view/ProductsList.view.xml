<mvc:View controllerName="com.yash.Assignment-7.controller.ProductsList" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:grid="sap.ui.layout.cssgrid" xmlns:f="sap.f">
	<App>
		<pages>
			<Page id="page">
				<customHeader>
					<Bar>
						<contentLeft>
							<Button type="Back" press=".goBack"/>
						</contentLeft>
						<contentMiddle>
							<Title id="employeeTitle" text="{i18n>ProductTitle}"/>
						</contentMiddle>
						<contentRight>
							<Toolbar>
								<Button type="Transparent" icon="sap-icon://globe" iconFirst="true" press=".showLanguages" tooltip="{i18n>languageButton}"/>
								<Select id="typeOfControls" icon="sap-icon://drop-down-list" width="30px" type="IconOnly" tooltip="Control List">
									<core:Item key="1" text="{i18n>typeOfControlItem1}"/>
									<core:Item key="2" text="{i18n>typeOfControlItem2}"/>
									<core:Item key="3" text="{i18n>typeOfControlItem3}l"/>
									<core:Item key="4" text="{i18n>typeOfControlItem4}"/>
								</Select>
								<Text id="appVersion" text="{i18n>appVersion}"/>
							</Toolbar>
						</contentRight>
					</Bar>
				</customHeader>
				<content>
					<f:GridList  id="gridList" items="{/Products}" class="sapUiSmallMarginTop">
						<f:GridListItem type="Active" press="onProductListItemPress"  >
							<VBox height="100%">
								<VBox class="sapUiSmallMargin">
									<layoutData>
										<FlexItemData growFactor="1" shrinkFactor="0"/></layoutData>
									<Title text="{ProductName}" wrapping="true"/>
									<Label text="{parts:['Discontinued'],formatter:'.formatter.discontinued'}" wrapping="true"/>
								</VBox>
							</VBox>
						</f:GridListItem>
					</f:GridList>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>